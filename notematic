<button id="donateBtn" onclick="window.open('https://paypal.me/parkhurstdominic715', '_blank')" style="background-color:teal;">üíñ Donate</button>
        <select id="themeSelector" style="background-color:yellow">
            <option value="light">Light Theme</option>
            <option value="dark">Dark Theme</option>
            <option value="colorful">Colorful Theme</option>
        </select>
        <button id="settingsBtn" style="background-color: teal;">‚öôÔ∏è Settings</button>
        <button id="loginBtn" style="background-color: teal;">üîë Login</button>
        <button id="signupBtn" style="background-color:teal;">üìù Sign Up</button>
        
        <div id="settings" class="settings">
            <h2>User Settings</h2>
            <input type="text" id="username" placeholder="Username">
            <input type="email" id="email" placeholder="Email">
            <button id="saveSettingsBtn">Save Settings</button>
            <p id="settingsMessage"></p>
        </div>

