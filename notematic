<body>
    <div id="loginOverlay">
        <div class="login-box" id="loginBox">
            <h2>Sign In</h2>
            <input type="email" id="email" placeholder="Email">
            <input type="password" id="password" placeholder="Password">
            <button id="loginBtn">Login</button>
            <div class="toggle" id="showSignUp">Don't have an account? Sign Up</div>
        </div>
        <div class="signup-box" id="signupBox" style="display: none;">
            <h2>Sign Up</h2>
            <input type="email" id="signupEmail" placeholder="Email">
            <input type="password" id="signupPassword" placeholder="Password">
            <button id="signupBtn">Sign Up</button>
            <div class="toggle" id="showLogin">Already have an account? Sign In</div>
        </div>
    </div>

    <!-- Simple Login Modal -->
    <div id="simpleLoginModal" style="display:none;">
        <div class="login-box simple-login-box">
            <h2>Login</h2>
            <input type="email" id="simpleEmail" placeholder="Email">
            <input type="password" id="simplePassword" placeholder="Password">
            <button id="simpleLoginBtn">Login</button>
            <button id="closeModalBtn">Close</button>
        </div>
    </div>

    <div class="container">
        <h1>NoteMatic</h1>
        <input type="text" id="searchInput" placeholder="Search notes...">
        <button id="addNoteBtn">➕ Add Note</button>
        <button onclick="openLoginModal()">Open Login Modal</button>
        <div id="notesContainer"></div>
    </div>

<script>
$(document).ready(function () {
    if (localStorage.getItem("userLoggedIn")) {
        $("#loginOverlay").hide();
        $(".container").show();
    }
    
    $("#loginBtn").click(function () {
        let email = $("#email").val();
        let password = $("#password").val();
        if (email && password) {
            localStorage.setItem("userLoggedIn", true);
            $("#loginOverlay").fadeOut();
            $(".container").fadeIn();
        } else {
            alert("Please enter valid email and password.");
        }
    });

    $("#signupBtn").click(function () {
        let email = $("#signupEmail").val();
        let password = $("#signupPassword").val();
        if (email && password) {
            alert("Account created successfully! You can now log in.");
            $("#signupBox").fadeOut();
            $("#loginBox").fadeIn();
        } else {
            alert("Please enter valid email and password.");
        }
    });

    $("#showSignUp").click(function () {
        $("#loginBox").fadeOut();
        $("#signupBox").fadeIn();
    });

    $("#showLogin").click(function () {
        $("#signupBox").fadeOut();
        $("#loginBox").fadeIn();
    });

    loadNotes();
    $("#addNoteBtn").click(addNote);
    $("#searchInput").on("input", function () {
        let searchText = $(this).val().toLowerCase();
        $(".note").each(function () {
            let noteText = $(this).find("textarea").val().toLowerCase();
            $(this).toggle(noteText.includes(searchText));
        });
    });

    function addNote(text = "") {
        let note = $('<div class="note" draggable="true"></div>').draggable();
        let textarea = $("<textarea></textarea>")
            .val(text)
            .on("input", saveNotes);
        let deleteBtn = $('<button class="delete">❌</button>').click(function () {
            note.remove();
            saveNotes();
        });
        note.append(textarea).append(deleteBtn);
        $("#notesContainer").append(note);
        saveNotes();
    }

    function saveNotes() {
        let notes = [];
        $(".note textarea").each(function () {
            notes.push($(this).val());
        });
        localStorage.setItem("stickyNotes", JSON.stringify(notes));
    }

    function loadNotes() {
        let notes = JSON.parse(localStorage.getItem("stickyNotes") || "[]");
        notes.forEach(text => addNote(text));
    }

    // Simple Login Modal functionality
    $("#simpleLoginBtn").click(function () {
        let email = $("#simpleEmail").val();
        let password = $("#simplePassword").val();
        if (email && password) {
            localStorage.setItem("userLoggedIn", true);
            $("#simpleLoginModal").fadeOut();
            $(".container").fadeIn();
        } else {
            alert("Please enter valid email and password.");
        }
    });

    $("#closeModalBtn").click(function () {
        $("#simpleLoginModal").fadeOut();
    });
});

// Function to open the simple login modal
function openLoginModal() {
    $("#simpleLoginModal").fadeIn();
}
</script>
</body>
</html>
