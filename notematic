<body>
    <div id="loginOverlay">
        <div class="login-box" id="loginBox">
            <h2>Sign In</h2>
            <input type="email" id="email" placeholder="Email">
            <input type="password" id="password" placeholder="Password">
            <button id="loginBtn">Login</button>
            <div class="toggle" id="showSignUp">Don't have an account? Sign Up</div>
        </div>
        <div class="signup-box" id="signupBox" style="display: none;">
            <h2>Sign Up</h2>
            <input type="email" id="signupEmail" placeholder="Email">
            <input type="password" id="signupPassword" placeholder="Password">
            <button id="signupBtn">Sign Up</button>
            <div class="toggle" id="showLogin">Already have an account? Sign In</div>
        </div>
    </div>

    <!-- Simple Login Modal -->
    <div id="simpleLoginModal" style="display:none;">
        <div class="login-box simple-login-box">
            <h2>Login</h2>
            <input type="email" id="simpleEmail" placeholder="Email">
            <input type="password" id="simplePassword" placeholder="Password">
            <button id="simpleLoginBtn">Login</button>
            <button id="closeModalBtn">Close</button>
        </div>
    </div>

    <div class="container">
        <h1>NoteNest</h1>
        <input type="text" id="searchInput" placeholder="Search notes...">
        <button id="addNoteBtn">‚ûï Add Note</button>
        <button id="settingsBtn">‚öôÔ∏è Settings</button>
        <button onclick="openLoginModal()">Open Login Modal</button>
        <div id="notesContainer"></div>
    </div>

    <!-- Settings Modal -->
    <div id="settingsModal">
        <div class="login-box">
            <h2>Settings</h2>
            <label for="themeSelect">Select Theme:</label>
            <select id="themeSelect">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
            </select>
            <label for="noteColor">Note Color:</label>
            <input type="color" id="noteColor" value="#ffeb3b">
            <label for="snapToggle">Enable Snap to Grid:</label>
            <input type="checkbox" id="snapToggle">
            <button id="saveSettingsBtn">Save Settings</button>
            <button id="closeSettingsBtn">Close</button>
        </div>
    </div>

<script>
$(document).ready(function () {
    if (localStorage.getItem("userLoggedIn")) {
        $("#loginOverlay").hide();
        $(".container").show();
    }

    $("#loginBtn").click(function () {
        let email = $("#email").val();
        let password = $("#password").val();
        if (email && password) {
            localStorage.setItem("userLoggedIn", true);
            $("#loginOverlay").fadeOut();
            $(".container").fadeIn();
        } else {
            alert("Please enter valid email and password.");
        }
    });

    $("#signupBtn").click(function () {
        let email = $("#signupEmail").val();
        let password = $("#signupPassword").val();
        if (email && password) {
            alert("Account created successfully! You can now log in.");
            $("#signupBox").fadeOut();
            $("#loginBox").fadeIn();
        } else {
            alert("Please enter valid email and password.");
        }
    });

    $("#showSignUp").click(function () {
        $("#loginBox").fadeOut();
        $("#signupBox").fadeIn();
    });

    $("#showLogin").click(function () {
        $("#signupBox").fadeOut();
        $("#loginBox").fadeIn();
    });

    loadNotes();
    $("#addNoteBtn").click(addNote);
    $("#searchInput").on("input", function () {
        let searchText = $(this).val().toLowerCase();
        $(".note").each(function () {
            let noteText = $(this).find(".note-content").html().toLowerCase();
            $(this).toggle(noteText.includes(searchText));
        });
    });

    function addNote(text = "", isPinned = false) {
        let note = $('<div class="note" draggable="true"></div>').draggable({
            stop: function(event, ui) {
                if ($("#snapToggle").is(":checked")) {
                    snapToGrid(ui.helper);
                }
            }
        });

        if (isPinned) {
            note.css("background", "grey"); // Change color if pinned
        }
        
        let noteContent = $('<div contenteditable="true" class="note-content"></div>')
            .html(text)
            .on("input", saveNotes);
        
        // Input field for adding text to the note
        let addTextField = $('<input type="text" class="addText" placeholder="Add more text...">');
        let addTextButton = $('<button class="addTextBtn">Add</button>').click(function () {
            let additionalText = addTextField.val();
            if (additionalText) {
                noteContent.append('<br>' + additionalText); // Append new text
                addTextField.val(''); // Clear input
                saveNotes(); // Save notes after adding text
            }
        });

        let deleteBtn = $('<button class="delete">‚ùå</button>').click(function () {
            note.remove();
            saveNotes();
        });
        
        let pinBtn = $('<button class="pin">üìå</button>').click(function () {
            note.toggleClass('pinned');
            if (note.hasClass('pinned')) {
                note.css("background", "grey"); // Change to grey when pinned
                saveNotes(); // Save the pinned state
            } else {
                note.css("background", "#ffeb3b"); // Change back to original color
                saveNotes(); // Save the unpinned state
            }
        });
        
        let resizeHandle = $('<div class="resize-handle"></div>').mousedown(initResize);
        
        note.append(noteContent)
            .append(addTextField)
            .append(addTextButton)
            .append(deleteBtn)
            .append(pinBtn)
            .append(resizeHandle);
        
        $("#notesContainer").append(note);
        saveNotes();
    }

    function snapToGrid(ui) {
        const gridSize = 20; // Define grid size
        let newPosition = {
            top: Math.round(ui.position.top / gridSize) * gridSize,
            left: Math.round(ui.position.left / gridSize) * gridSize
        };
        ui.helper.css(newPosition);
        saveNotes();
    }

    function saveNotes() {
        let notes = [];
        $(".note").each(function () {
            let content = $(this).find(".note-content").html();
            let isPinned = $(this).hasClass('pinned');
            notes.push({ content: content, pinned: isPinned });
        });
        localStorage.setItem("stickyNotes", JSON.stringify(notes));
    }

    function loadNotes() {
        let notes = JSON.parse(localStorage.getItem("stickyNotes") || "[]");
        notes.forEach(note => addNote(note.content, note.pinned));
    }

    // Resizing functionality
    function initResize(e) {
        e.preventDefault();
        $(document).on("mousemove", resizeNote);
        $(document).on("mouseup", stopResize);
    }

    function resizeNote(e) {
        let note = $(e.target).closest('.note');
        let newWidth = e.pageX - note.offset().left;
        let newHeight = e.pageY - note.offset().top;

        if (newWidth > 100) note.width(newWidth);
        if (newHeight > 100) note.height(newHeight);
    }

    function stopResize() {
        $(document).off("mousemove", resizeNote);
        $(document).off("mouseup", stopResize);
        saveNotes();
    }

    // Simple Login Modal functionality
    $("#simpleLoginBtn").click(function () {
        let email = $("#simpleEmail").val();
        let password = $("#simplePassword").val();
        if (email && password) {
            localStorage.setItem("userLoggedIn", true);
            $("#simpleLoginModal").fadeOut();
            $(".container").fadeIn();
        } else {
            alert("Please enter valid email and password.");
        }
    });

    $("#closeModalBtn").click(function () {
        $("#simpleLoginModal").fadeOut();
    });

    // Settings functionality
    $("#settingsBtn").click(function () {
        $("#settingsModal").fadeIn();
        $("#snapToggle").prop("checked", localStorage.getItem("snapEnabled") === "true");
    });

    $("#closeSettingsBtn").click(function () {
        $("#settingsModal").fadeOut();
    });

    $("#saveSettingsBtn").click(function () {
        let selectedTheme = $("#themeSelect").val();
        let noteColor = $("#noteColor").val();
        let snapEnabled = $("#snapToggle").is(":checked");

        localStorage.setItem("selectedTheme", selectedTheme);
        localStorage.setItem("noteColor", noteColor);
        localStorage.setItem("snapEnabled", snapEnabled);

        applySettings();
        $("#settingsModal").fadeOut();
    });

    function applySettings() {
        let selectedTheme = localStorage.getItem("selectedTheme") || "light";
        let noteColor = localStorage.getItem("noteColor") || "#ffeb3b";

        if (selectedTheme === "dark") {
            $("body").css("background", "#333");
            $(".note").css("background", noteColor);
        } else {
            $("body").css("background", "#e0f7fa"); // Keep the light blue background
            $(".note").css("background", noteColor);
        }
    }

    applySettings(); // Apply settings on load
});

// Function to open the simple login modal
function openLoginModal() {
    $("#simpleLoginModal").fadeIn();
}
</script>
</body>
</html>
